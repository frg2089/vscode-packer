{
  "name": "@frg2089/vscode-packer",
  "version": "0.0.2",
  "type": "commonjs",
  "description": "VSCode 扩展打包工具",
  "repository": {
    "type": "git",
    "url": "https://github.com/frg2089/vscode-packer.git"
  },
  "author": "",
  "license": "MIT",
  "bin": {
    "vscp": "dist/vscp.js"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      },
      "require": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./vanilla": {
      "import": {
        "default": "./dist/plugins/vanilla.mjs",
        "types": "./dist/plugins/vanilla.d.mts"
      },
      "require": {
        "default": "./dist/plugins/vanilla.js",
        "types": "./dist/plugins/vanilla.d.ts"
      }
    },
    "./typescript": {
      "import": {
        "default": "./dist/plugins/typescript.mjs",
        "types": "./dist/plugins/typescript.d.mts"
      },
      "require": {
        "default": "./dist/plugins/typescript.js",
        "types": "./dist/plugins/typescript.d.ts"
      }
    },
    "./sass": {
      "import": {
        "default": "./dist/plugins/sass.mjs",
        "types": "./dist/plugins/sass.d.mts"
      },
      "require": {
        "default": "./dist/plugins/sass.js",
        "types": "./dist/plugins/sass.d.ts"
      }
    },
    "./env": "./env.d.ts"
  },
  "keywords": [],
  "scripts": {
    "build": "tsup",
    "prepublish": "pnpm build"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "node-html-parser": "^7.0.1",
    "tsup": "^8.3.5",
    "vite": "^6.0.7"
  },
  "optionalDependencies": {
    "sass": "^1.83.1",
    "sass-embedded": "^1.83.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.3",
    "@types/vscode": "^1.96.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/vscp.ts",
      "src/plugins/*.ts"
    ],
    "platform": "node",
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "minify": true,
    "bundle": true,
    "tsconfig": "tsconfig.json",
    "clean": true,
    "loader": {
      ".html": "text",
      ".template": "text"
    }
  }
}